# GiT Aliases
function gcl
  git clone $argv
end
function ga
  git add $argv
end
function gap
  git add -p
end
function gall
  git add .
end
function gus
  git reset HEAD
end
function gm
  git merge $argv
end
function gst
  git status
end
function gss
  git status -s
end
function gdv
  git diff -w $argv | vim -R -
end
function gc
  git commit -v $argv
end
function gca
  git commit -v -a
end
function gcm
  git commit -v -m $argv
end
function gci
  git commit --interactive
end
function gb
  git branch $argv
end
function gba
  git branch -a
end
function gcp
  git cherry-pick $argv
end
function gco
  git checkout $argv
end
function gdel
  git branch -D $argv
end
function gw
  git whatchanged
end
