[diff]
	submodule = log
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true

[pull]
	rebase = true

[push]
	default = current
	default = simple
	autoSetupRemote = true
	followTags = true

[fetch]
	prune = true
	pruneTags = true
	all = true

[status]
	submodulesummary = 1

[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true

[init]
	defaultBranch = main

[gpg]
	format = ssh

[column]
	ui = auto

[branch]
	sort = -committerdate

[tag]
	sort = version:refname

[help]
	autocorrect = prompt

[commit]
	verbose = true

[rerere]
	enabled = true
	autoupdate = true

[alias]
	# assume-unchanged
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	assumed = "!git ls-files -v | grep ^h | cut -c 3-"
	unassumeall = "!git assumed | xargs git update-index --no-assume-unchanged"
	assumeall = "!git st -s | awk {'print $2'} | xargs git assume"
	c = commit -S
	cm = commit -S -m
	ap = add -p
	all = add .
	st = status
	pf = push --force-with-lease
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	rmignored = "!git ls-files -o -i --exclude-standard | xargs git rm --cached"
	# lcur: Displays the last 10 commits in a graphical, one-line format with decorations, comparing HEAD to its upstream branch.
	lcur = log --graph --oneline --decorate -n 10 HEAD @{u}
	l = "log --oneline --decorate --graph --branches --remotes -20 --pretty=format:\"%C(yellow)%h%C(red bold)%d %Creset%s %C(green)(%ar) %C(cyan)<%cn>\" --date=relative"
	ls = log --oneline --decorate --graph --branches --remotes --simplify-by-decoration
	reco = commit --amend --no-edit
	recore = commit --amend

	# list aliases
	al = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
	gone = !git branch -vv | grep ': gone]' | awk '{print $1}'

	# Non ancora portato da OMF. Non sicuro che funzioni a dovere
